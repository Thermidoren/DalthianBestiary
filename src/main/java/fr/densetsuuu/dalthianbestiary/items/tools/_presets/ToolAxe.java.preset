package fr.densetsuuu.dalthianbestiary.items.tools;

import fr.densetsuuu.dalthianbestiary.Base;
import init.fr.densetsuuu.dalthianbestiary.ModItems;
import util.fr.densetsuuu.dalthianbestiary.IHasModel;
import util.fr.densetsuuu.dalthianbestiary.Resource;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.ItemAxe;

public class ToolAxe extends ItemAxe implements IHasModel {

    /** Creating the Base of a new Mod Tool */
    public ToolAxe(String name, ToolMaterial material) {
        super(material, 6.0f, -3.2f);
        setUnlocalizedName (name);
        setRegistryName(Reference.MOD_ID, name);
        setCreativeTab(CreativeTabs.TOOLS);

        ModItems.ITEMS.add(this);
    }

    /** Registering the Model of the Mod Items*/
    @Override
    public void registerModels() {
        Main.proxy.registerItemRenderer(this, 0, "inventory");
    }
}